<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.calendartodo_pjt.bbs.dao.EventMapper">




    <!-- insertRow --> 

    <insert id="insertRow"
            parameterType="com.example.calendartodo_pjt.bbs.domain.EventRequestDTO">
        INSERT INTO TB_CALENDAR_EVENT(DAY, TITLE, CONTENT, COLOR)
        VALUES( #{day}, #{title}, #{content}, #{color})
    </insert>     

    <!-- findAllRow --> 

    <select id="findAllRow"
            resultType="com.example.calendartodo_pjt.bbs.domain.EventResponseDTO">
        SELECT ID, DAY, TITLE, CONTENT, COLOR
        FROM   TB_CALENDAR_EVENT 
     </select>

    <!-- findlist --> 

    <select id="findlist"
            parameterType="java.util.HashMap"
            resultType="com.example.calendartodo_pjt.bbs.domain.EventResponseDTO">
        SELECT ID, DAY, TITLE, CONTENT, COLOR
        FROM   TB_CALENDAR_EVENT    
        WHERE  DAY = #{ id }
    </select>

    <!-- findRow --> 

    <select id="findRow"
            parameterType="java.util.HashMap"
            resultType="com.example.calendartodo_pjt.bbs.domain.EventResponseDTO">
        SELECT ID, DAY, TITLE, CONTENT, COLOR
        FROM   TB_CALENDAR_EVENT    
        WHERE  ID = #{ id }    
    </select>    

    <!-- deleteRow --> 

    <delete id="deleteRow"
            parameterType="java.util.HashMap">
        DELETE FROM TB_CALENDAR_EVENT
        WHERE       ID = #{ id }
    </delete>

    </mapper>